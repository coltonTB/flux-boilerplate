@import './normal.styl'

#main
  width 900px
  margin-right auto
  margin-left auto
  font-family helvetica, sans-serif
  
#navbar
  height: 40px;
  background-color: #ddd;
  a
    background #eee
    border none
    height 38px
    line-height 40px
    text-decoration none
    padding 0 22px
    border-bottom 2px solid transparent
    float left
    margin-right 1px
    &.selected
      border-color gray
  a.right
    float right
    
#content
  font-weight 100
  margin 40px 0
  
  table.job-list
    width 100%
    
  a.request-job
    margin 10px 0
    
  #log-in, #sign-up
    width 250px
    margin-right auto
    margin-left auto
    input
      width 100%
      height 40px
      font-size 16pt
      padding 0 8px
    button
      width 100%
      height 40px
    